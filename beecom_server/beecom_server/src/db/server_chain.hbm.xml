<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
        "http://www.hibernate.org/dtd/hibernate-mapping">  
 
<hibernate-mapping package="db">    
    <class name="ServerChainHbn" table="server_chain">  
        <id name="id" column="id">  
            <generator class="native" />
        </id>  
        <property name="clientId" column="client_id" />  
        <property name="upperServer" column="upper_server" />  
        <property name="upperServerType" column="upper_server_type" />  
        <property name="lowerServer" column="lower_server" />  
        <property name="lowerServerType" column="lower_server_type" />  
        
    </class>    
</hibernate-mapping>